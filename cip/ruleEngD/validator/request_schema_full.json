{
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "properties":{
    "actor": {
      "type":"object",
      "properties":{
        "flow": {
          "type":"string",
          "minLength":5,
          "maxLength":255
        },
        "entry": {
          "type":"string",
          "minLength":5,
          "maxLength":255
        },
        "client_id": {
          "type":"string",
          "minLength":3,
          "maxLength":255
        },
        "ip": {
          "type":"string",
          "format":"ip-address"
        },
        "session_id": {
          "type":"string"
        }
      },
      "required" : ["flow", "entry"]
    },
    "checkpoint": {
      "type":"object",
      "properties":{
        "name": {
          "type":"string",
          "minLength":5,
          "maxLength":255
        },
        "uri": {
          "type":"string",
          "format":"uri"
        },
        "conflict": {
          "enum":["HPW","ALL"]
        },
        "summary": {
          "type":"string"
        }
      },
      "required":["name","uri"]
    },
    "event":{
      "$ref":"file:dev_init_evt.json"
    }
  },
  "required":["actor","checkpoint"]
}
